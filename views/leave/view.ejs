<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/dashboard">
                <i class="fas fa-calendar-alt me-2"></i>Leave Management System
            </a>
            <div class="navbar-nav ms-auto">
                <span class="navbar-text me-3">
                    <i class="fas fa-user me-1"></i><%= user.username %> (<%= user.role %>)
                </span>
                <a href="/leave/history" class="btn btn-outline-light btn-sm me-2">
                    <i class="fas fa-history me-1"></i>My Leaves
                </a>
                <% if (user.role === 'HOD') { %>
                    <a href="/leave/applications" class="btn btn-outline-light btn-sm me-2">
                        <i class="fas fa-tasks me-1"></i>HOD Panel
                    </a>
                <% } %>
                <a href="/auth/logout" class="btn btn-outline-light btn-sm">
                    <i class="fas fa-sign-out-alt me-1"></i>Logout
                </a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>
                <i class="fas fa-file-alt me-2"></i>Leave Application Details
            </h2>
            <a href="/leave/history" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i>Back to History
            </a>
        </div>

        <!-- Leave Application Details -->
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-info-circle me-2"></i>Application Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Applicant:</strong> <%= leave.faculty.username %></p>
                                <p><strong>Department:</strong> <%= leave.faculty.department %></p>
                                <p><strong>Email:</strong> <%= leave.faculty.email %></p>
                                <% if (leave.faculty.phone) { %>
                                    <p><strong>Phone:</strong> <%= leave.faculty.phone %></p>
                                <% } %>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Leave Type:</strong> 
                                    <span class="badge bg-info"><%= leave.leaveType %></span>
                                </p>
                                <p><strong>Start Date:</strong> <%= leave.startDate.toLocaleDateString() %></p>
                                <p><strong>End Date:</strong> <%= leave.endDate.toLocaleDateString() %></p>
                                <p><strong>Total Days:</strong> <span class="badge bg-secondary"><%= leave.totalDays %></span></p>
                            </div>
                        </div>
                        
                        <div class="mt-3">
                            <p><strong>Reason:</strong></p>
                            <div class="border p-3 rounded bg-light">
                                <%= leave.reason %>
                            </div>
                        </div>

                        <div class="mt-3">
                            <p><strong>Status:</strong> 
                                <span class="badge 
                                    <%= leave.status === 'Approved' ? 'bg-success' : 
                                        leave.status === 'Rejected' ? 'bg-danger' : 'bg-warning' %>">
                                    <%= leave.status %>
                                </span>
                            </p>
                            
                            <% if (leave.approvedBy) { %>
                                <p><strong>Approved By:</strong> <%= leave.approvedBy.username %></p>
                            <% } %>
                            
                            <% if (leave.comments) { %>
                                <p><strong>Comments:</strong></p>
                                <div class="border p-3 rounded bg-light">
                                    <%= leave.comments %>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <!-- Application Timeline -->
                <div class="card mb-4">
                    <div class="card-header bg-info text-white">
                        <h6 class="card-title mb-0">
                            <i class="fas fa-clock me-2"></i>Timeline
                        </h6>
                    </div>
                    <div class="card-body">
                        <p><strong>Applied On:</strong> <%= leave.createdAt.toLocaleString() %></p>
                        <% if (leave.updatedAt && leave.updatedAt.toString() !== leave.createdAt.toString()) { %>
                            <p><strong>Last Updated:</strong> <%= leave.updatedAt.toLocaleString() %></p>
                        <% } %>
                    </div>
                </div>

                <!-- Quick Actions for HOD -->
                <% if (user.role === 'HOD' && leave.status === 'Pending') { %>
                    <div class="card">
                        <div class="card-header bg-warning text-dark">
                            <h6 class="card-title mb-0">
                                <i class="fas fa-cogs me-2"></i>Quick Actions
                            </h6>
                        </div>
                        <div class="card-body">
                            <form action="/leave/<%= leave._id %>/action" method="POST" class="d-grid gap-2">
                                <div class="form-group">
                                    <label for="comments" class="form-label">Comments (Optional):</label>
                                    <textarea class="form-control" id="comments" name="comments" rows="3" 
                                              placeholder="Add comments for approval/rejection..."></textarea>
                                </div>
                                <button type="submit" name="status" value="Approved" class="btn btn-success">
                                    <i class="fas fa-check me-1"></i>Approve
                                </button>
                                <button type="submit" name="status" value="Rejected" class="btn btn-danger">
                                    <i class="fas fa-times me-1"></i>Reject
                                </button>
                            </form>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Workload Assignments -->
        <% if (leave.workloadAssignments && leave.workloadAssignments.length > 0) { %>
            <div class="card mt-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-tasks me-2"></i>Workload Assignments
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Faculty</th>
                                    <th>Subject</th>
                                    <th>Date</th>
                                    <th>Time Slot</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% leave.workloadAssignments.forEach(assignment => { %>
                                    <tr>
                                        <td>
                                            <% if (assignment.faculty) { %>
                                                <%= assignment.faculty.username %>
                                            <% } else { %>
                                                <span class="text-muted">Not Assigned</span>
                                            <% } %>
                                        </td>
                                        <td><%= assignment.subject %></td>
                                        <td><%= assignment.date.toLocaleDateString() %></td>
                                        <td><%= assignment.timeSlot %></td>
                                        <td>
                                            <span class="badge 
                                                <%= assignment.status === 'Accepted' ? 'bg-success' : 
                                                    assignment.status === 'Rejected' ? 'bg-danger' : 'bg-warning' %>">
                                                <%= assignment.status || 'Pending' %>
                                            </span>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>