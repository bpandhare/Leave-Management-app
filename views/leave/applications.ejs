<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .alert {
            @apply p-4 rounded-lg border;
        }
        .alert-success {
            @apply bg-green-50 border-green-200 text-green-800;
        }
        .alert-error {
            @apply bg-red-50 border-red-200 text-red-800;
        }
        .btn {
            @apply px-4 py-2 rounded-lg font-semibold transition duration-200;
        }
        .btn-primary {
            @apply bg-blue-600 text-white hover:bg-blue-700;
        }
        .btn-secondary {
            @apply bg-gray-600 text-white hover:bg-gray-700;
        }
        .stat-card {
            @apply bg-white p-6 rounded-lg shadow-md border;
        }
        .stat-card-primary {
            @apply border-blue-200;
        }
        .stat-card-warning {
            @apply border-yellow-200;
        }
        .stat-card-success {
            @apply border-green-200;
        }
        .stat-card-danger {
            @apply border-red-200;
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Navigation -->
    <nav class="bg-blue-600 text-white shadow-lg">
        <div class="max-w-7xl mx-auto px-4">
            <div class="flex justify-between items-center py-4">
                <div class="flex items-center space-x-3">
                    <i class="fas fa-calendar-alt text-2xl"></i>
                    <h1 class="text-2xl font-bold">LeaveManager</h1>
                    <span class="bg-blue-500 px-3 py-1 rounded-full text-sm font-semibold">
                        HOD Panel
                    </span>
                </div>
                <div class="flex items-center space-x-4">
                    <a href="/dashboard" class="hover:text-blue-200 transition duration-200 flex items-center">
                        <i class="fas fa-arrow-left mr-2"></i> Back to Dashboard
                    </a>
                    <span>Welcome, <%= user.username %></span>
                    <a href="/auth/logout" class="hover:text-blue-200 transition duration-200">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <div class="max-w-7xl mx-auto px-4 py-8">
        <!-- Notifications -->
        <% if (success) { %>
            <div class="alert alert-success mb-6 flex justify-between items-center">
                <span><i class="fas fa-check-circle mr-2"></i><%= success %></span>
                <button onclick="this.parentElement.remove()" class="text-green-700 hover:text-green-900">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        <% } %>
        <% if (error) { %>
            <div class="alert alert-error mb-6 flex justify-between items-center">
                <span><i class="fas fa-exclamation-circle mr-2"></i><%= error %></span>
                <button onclick="this.parentElement.remove()" class="text-red-700 hover:text-red-900">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        <% } %>

        <!-- Page Header -->
        <div class="flex justify-between items-center mb-8">
            <div>
                <h2 class="text-3xl font-bold text-gray-800">Leave Applications</h2>
                <p class="text-gray-600 mt-2">Review and manage all leave applications in your department</p>
            </div>
            <div class="flex space-x-3">
                <button class="btn btn-secondary print-btn" onclick="window.print()">
                    <i class="fas fa-print mr-2"></i> Print Report
                </button>
                <button class="btn btn-primary" onclick="window.location.reload()">
                    <i class="fas fa-sync-alt mr-2"></i> Refresh
                </button>
            </div>
        </div>

        <!-- Applications Table -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <% if (!leaves || leaves.length === 0) { %>
                <div class="text-center py-12">
                    <i class="fas fa-inbox text-4xl text-gray-300 mb-4"></i>
                    <h3 class="text-xl font-semibold text-gray-600 mb-2">No Leave Applications</h3>
                    <p class="text-gray-500">There are no pending leave applications at the moment.</p>
                </div>
            <% } else { %>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Faculty & Details
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Leave Information
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Workload
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Status
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <% leaves.forEach(leave => { %>
                                <tr class="hover:bg-gray-50 transition duration-150">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="flex-shrink-0 h-10 w-10 bg-blue-100 rounded-full flex items-center justify-center">
                                                <i class="fas fa-user text-blue-600"></i>
                                            </div>
                                            <div class="ml-4">
                                                <div class="text-sm font-medium text-gray-900">
                                                    <%= leave.faculty.username %>
                                                </div>
                                                <div class="text-sm text-gray-500">
                                                    <%= leave.faculty.department %>
                                                </div>
                                                <div class="text-xs text-gray-400">
                                                    <%= leave.faculty.email %>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="text-sm text-gray-900">
                                            <strong><%= leave.leaveType %> Leave</strong>
                                        </div>
                                        <div class="text-sm text-gray-500">
                                            <%= leave.startDate.toLocaleDateString() %> - 
                                            <%= leave.endDate.toLocaleDateString() %>
                                        </div>
                                        <div class="text-xs text-blue-600 font-semibold">
                                            <%= leave.totalDays %> <%= leave.totalDays === 1 ? 'day' : 'days' %>
                                        </div>
                                        <div class="text-xs text-gray-400 mt-1">
                                            Applied: <%= leave.createdAt.toLocaleDateString() %>
                                        </div>
                                        <!-- Reason Preview -->
                                        <div class="mt-2">
                                            <button onclick="toggleReason('<%= leave._id %>')" 
                                                    class="text-xs text-blue-600 hover:text-blue-800">
                                                <i class="fas fa-eye mr-1"></i> View Reason
                                            </button>
                                            <div id="reason-<%= leave._id %>" class="hidden mt-2 p-2 bg-gray-50 rounded text-xs text-gray-600">
                                                <%= leave.reason %>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <% if (leave.workloadAssignments && leave.workloadAssignments.length > 0) { %>
                                            <div class="text-sm">
                                                <span class="font-semibold text-gray-700"><%= leave.workloadAssignments.length %> assignments</span>
                                                <div class="text-xs text-gray-500 mt-1">
                                                    <% leave.workloadAssignments.forEach(item => { %>
                                                        <div class="flex items-center space-x-1 mb-1">
                                                            <span class="<%= item.status === 'Accepted' ? 'text-green-600' : item.status === 'Rejected' ? 'text-red-600' : 'text-yellow-600' %>">
                                                                <i class="fas fa-circle text-xs"></i>
                                                            </span>
                                                            <span>
                                                                <% if (item.faculty && item.faculty.username) { %>
                                                                    <%= item.faculty.username %>
                                                                <% } else { %>
                                                                    Not Assigned
                                                                <% } %>
                                                            </span>
                                                        </div>
                                                    <% }); %>
                                                </div>
                                            </div>
                                        <% } else { %>
                                            <span class="text-xs text-gray-400">No workload assigned</span>
                                        <% } %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                            <%= leave.status === 'Approved' ? 'bg-green-100 text-green-800' : 
                                               leave.status === 'Rejected' ? 'bg-red-100 text-red-800' : 
                                               'bg-yellow-100 text-yellow-800' %>">
                                            <%= leave.status %>
                                        </span>
                                        <% if (leave.approvedBy && leave.approvedBy.username) { %>
                                            <div class="text-xs text-gray-500 mt-1">
                                                By: <%= leave.approvedBy.username %>
                                            </div>
                                        <% } %>
                                        <% if (leave.comments) { %>
                                            <div class="text-xs text-gray-500 mt-1" title="<%= leave.comments %>">
                                                <i class="fas fa-comment mr-1"></i> Has comments
                                            </div>
                                        <% } %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                        <% if (leave.status === 'Pending') { %>
                                            <div class="flex flex-col space-y-2">
                                                <form method="POST" action="/leave/<%= leave._id %>/action" class="inline">
                                                    <input type="hidden" name="status" value="Approved">
                                                    <button type="submit" 
                                                            class="w-full text-green-600 hover:text-green-900 bg-green-50 hover:bg-green-100 px-3 py-2 rounded text-sm transition duration-200 flex items-center justify-center"
                                                            onclick="return confirm('Approve this leave application?')">
                                                        <i class="fas fa-check mr-2"></i> Approve
                                                    </button>
                                                </form>
                                                <form method="POST" action="/leave/<%= leave._id %>/action" class="inline">
                                                    <input type="hidden" name="status" value="Rejected">
                                                    <button type="submit" 
                                                            class="w-full text-red-600 hover:text-red-900 bg-red-50 hover:bg-red-100 px-3 py-2 rounded text-sm transition duration-200 flex items-center justify-center"
                                                            onclick="return confirm('Reject this leave application?')">
                                                        <i class="fas fa-times mr-2"></i> Reject
                                                    </button>
                                                </form>
                                                <!-- Comments Form -->
                                                <button onclick="toggleCommentForm('<%= leave._id %>')"
                                                        class="w-full text-blue-600 hover:text-blue-900 bg-blue-50 hover:bg-blue-100 px-3 py-2 rounded text-sm transition duration-200 flex items-center justify-center">
                                                    <i class="fas fa-comment mr-2"></i> Add Comment
                                                </button>
                                                <form method="POST" action="/leave/<%= leave._id %>/action" 
                                                      id="comment-form-<%= leave._id %>" 
                                                      class="hidden mt-2">
                                                    <textarea name="comments" 
                                                              placeholder="Add comments (optional)" 
                                                              class="w-full p-2 border rounded text-sm"
                                                              rows="2"></textarea>
                                                    <div class="flex space-x-2 mt-2">
                                                        <button type="submit" name="status" value="Approved"
                                                                class="flex-1 bg-green-600 text-white px-3 py-1 rounded text-sm hover:bg-green-700">
                                                            Approve
                                                        </button>
                                                        <button type="submit" name="status" value="Rejected"
                                                                class="flex-1 bg-red-600 text-white px-3 py-1 rounded text-sm hover:bg-red-700">
                                                            Reject
                                                        </button>
                                                    </div>
                                                </form>
                                            </div>
                                        <% } else { %>
                                            <span class="text-gray-400 text-sm">Processed</span>
                                            <a href="/leave/<%= leave._id %>" 
                                               class="block text-blue-600 hover:text-blue-900 mt-1 text-sm">
                                                <i class="fas fa-eye mr-1"></i> View Details
                                            </a>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } %>
        </div>

        <!-- Statistics Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mt-8">
            <div class="stat-card stat-card-primary">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 text-sm font-semibold uppercase">Total Applications</p>
                        <p class="text-3xl font-bold text-gray-800 mt-2"><%= leaves.length %></p>
                    </div>
                    <div class="bg-blue-100 p-3 rounded-full">
                        <i class="fas fa-file-alt text-2xl text-blue-500"></i>
                    </div>
                </div>
            </div>

            <div class="stat-card stat-card-warning">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 text-sm font-semibold uppercase">Pending</p>
                        <p class="text-3xl font-bold text-gray-800 mt-2">
                            <%= leaves.filter(l => l.status === 'Pending').length %>
                        </p>
                    </div>
                    <div class="bg-yellow-100 p-3 rounded-full">
                        <i class="fas fa-clock text-2xl text-yellow-500"></i>
                    </div>
                </div>
            </div>

            <div class="stat-card stat-card-success">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 text-sm font-semibold uppercase">Approved</p>
                        <p class="text-3xl font-bold text-gray-800 mt-2">
                            <%= leaves.filter(l => l.status === 'Approved').length %>
                        </p>
                    </div>
                    <div class="bg-green-100 p-3 rounded-full">
                        <i class="fas fa-check-circle text-2xl text-green-500"></i>
                    </div>
                </div>
            </div>

            <div class="stat-card stat-card-danger">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 text-sm font-semibold uppercase">Rejected</p>
                        <p class="text-3xl font-bold text-gray-800 mt-2">
                            <%= leaves.filter(l => l.status === 'Rejected').length %>
                        </p>
                    </div>
                    <div class="bg-red-100 p-3 rounded-full">
                        <i class="fas fa-times-circle text-2xl text-red-500"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function toggleReason(leaveId) {
            const reasonDiv = document.getElementById('reason-' + leaveId);
            reasonDiv.classList.toggle('hidden');
        }

        function toggleCommentForm(leaveId) {
            const form = document.getElementById('comment-form-' + leaveId);
            form.classList.toggle('hidden');
        }

        // Auto-hide alerts after 5 seconds
        setTimeout(() => {
            document.querySelectorAll('.alert').forEach(alert => {
                alert.style.display = 'none';
            });
        }, 5000);
    </script>
</body>
</html>