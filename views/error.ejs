<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .btn {
            display: inline-block;
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.2s;
            border: none;
            cursor: pointer;
        }
        .btn-primary {
            background-color: #3b82f6;
            color: white;
        }
        .btn-primary:hover {
            background-color: #2563eb;
        }
        .btn-secondary {
            background-color: #6b7280;
            color: white;
        }
        .btn-secondary:hover {
            background-color: #4b5563;
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Navigation -->
    <% if (typeof user !== 'undefined' && user) { %>
        <nav class="bg-blue-600 text-white shadow-lg">
            <div class="max-w-7xl mx-auto px-4">
                <div class="flex justify-between items-center py-4">
                    <div class="flex items-center space-x-3">
                        <i class="fas fa-calendar-alt text-2xl"></i>
                        <h1 class="text-2xl font-bold">LeaveManager</h1>
                    </div>
                    <div class="flex items-center space-x-4">
                        <a href="/dashboard" class="hover:text-blue-200 transition duration-200">
                            <i class="fas fa-arrow-left mr-1"></i> Back to Dashboard
                        </a>
                        <form method="POST" action="/auth/logout" class="inline">
                            <button type="submit" class="hover:text-blue-200 transition duration-200">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </nav>
    <% } else { %>
        <nav class="bg-blue-600 text-white shadow-lg">
            <div class="max-w-7xl mx-auto px-4">
                <div class="flex justify-between items-center py-4">
                    <div class="flex items-center space-x-3">
                        <i class="fas fa-calendar-alt text-2xl"></i>
                        <h1 class="text-2xl font-bold">LeaveManager</h1>
                    </div>
                    <div class="space-x-4">
                        <a href="/auth/login" class="hover:text-blue-200 transition duration-200">Login</a>
                        <a href="/auth/register" class="bg-blue-500 hover:bg-blue-700 px-4 py-2 rounded-lg transition duration-200">Register</a>
                    </div>
                </div>
            </div>
        </nav>
    <% } %>

    <!-- Error Content -->
    <div class="max-w-2xl mx-auto px-4 py-16 text-center">
        <div class="bg-white rounded-lg shadow-md p-8">
            <div class="text-red-500 text-6xl mb-4">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <h1 class="text-3xl font-bold text-gray-800 mb-4"><%= title %></h1>
            <p class="text-gray-600 text-lg mb-8">
                <% if (typeof message !== 'undefined') { %>
                    <%= message %>
                <% } else if (typeof error !== 'undefined' && error.message) { %>
                    <%= error.message %>
                <% } else { %>
                    An unexpected error occurred.
                <% } %>
            </p>
            
            <!-- Debug information for development -->
            <% if (typeof error !== 'undefined' && error.stack && process.env.NODE_ENV === 'development') { %>
                <div class="mt-6 p-4 bg-yellow-50 border border-yellow-200 rounded-lg text-left">
                    <h4 class="font-semibold text-yellow-800 mb-2">Debug Information:</h4>
                    <pre class="text-sm text-yellow-700 whitespace-pre-wrap"><%= error.stack %></pre>
                </div>
            <% } %>
            
            <div class="space-y-4 mt-8">
                <% if (typeof user !== 'undefined' && user) { %>
                    <a href="/dashboard" class="btn btn-primary inline-block">
                        <i class="fas fa-arrow-left mr-2"></i> Back to Dashboard
                    </a>
                <% } else { %>
                    <a href="/" class="btn btn-primary inline-block">
                        <i class="fas fa-home mr-2"></i> Go to Homepage
                    </a>
                <% } %>
                
                <button onclick="window.history.back()" class="btn btn-secondary ml-4">
                    <i class="fas fa-undo mr-2"></i> Go Back
                </button>
            </div>

            <!-- Support Information -->
            <div class="mt-8 p-4 bg-gray-100 rounded-lg">
                <h3 class="font-semibold text-gray-700 mb-2">Need Help?</h3>
                <p class="text-gray-600 text-sm">
                    If this error persists, please contact the system administrator or 
                    <a href="mailto:support@leavemanager.com" class="text-blue-600 hover:text-blue-800">support@leavemanager.com</a>
                </p>
            </div>
        </div>
    </div>

    <script>
        // Add button styling and functionality
        document.addEventListener('DOMContentLoaded', function() {
            const buttons = document.querySelectorAll('.btn');
            buttons.forEach(btn => {
                btn.addEventListener('click', function(e) {
                    if (this.getAttribute('href') === '#' || this.type === 'button') {
                        e.preventDefault();
                    }
                });
            });
        });
    </script>
</body>
</html>